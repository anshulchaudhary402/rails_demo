
<div class="col-lg-12">
    <div class="card rounded-0 mt-2 mb-5">
        <div class="card-body">
            <h2 class="text-center"><i> Document Listing</i></h2>
        </div>
    </div>
    <h3 class="text-center"><%= flash[:notice] %></h3>
    <%= link_to 'Create New Document', new_document_path, class: 'btn btn-primary mt-3 rounded-0' %>
        <div class="text-center">
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name:</th>
                        <th>DocType:</th>
                        <th>Emp Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @documents.each do |document| %>
                        <tr>
                            <td></td>
                            <td><%=document.name %></td>
                            <td><%= document.doc_type %></td>
                            <td><%= link_to document.employee.name, employee_path(document.employee)  %></td>
                            <td>
                                <div class="dropdown">
                                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Actions
                                      </button>
                                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><%= link_to 'Edit', edit_document_path(document),class:'dropdown-item' %></li>
                                        <li><%= link_to 'show', document_path(document),class: 'dropdown-item'%></li>
                                        <li><%= link_to 'Delete', document_path(document),class: 'dropdown-item',method: :delete, data: { confirm: 'Are  you sure  delete this employee?'}%></li>
                                      </ul>
                                 </div>
                            </td> 
                        </tr>

                        
                    <% end %>
                
                </tbody>
            
            </table>
            
    </div>
</div>