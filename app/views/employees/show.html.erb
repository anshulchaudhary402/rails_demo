<div class="col-lg-12">
    <div class="card rounded-0 mt-2 mb-5">
        <div class="card-body">
            <h2 class="text-center"><i> Employee Details</i></h2>
        </div>
    </div>
        <div class="row mt-5">
                <div class="col-lg-6">
                    <h3><i>Personal Information</i></h3>
            
        
                    <i><p class="lead"><strong>First_name:</strong><%= @employee.first_name %></p></i>
                    <i><p class="lead"><strong>Middle_name:</strong><%= @employee.middle_name %></p></i>
                    <i><p class="lead"><strong>Last_name:</strong><%= @employee.last_name %></p></i>
                   <i><p class="lead"><strong>Personal Email:</strong><%= @employee.personal_email %></p></i>
                   <i><p class="lead"><strong>DOJ:</strong><%= @employee.date_of_joining %></p></i>
                    <i><p class="lead"><strong>DOB:</strong><%= @employee.date_of_birth %></p></i>
                </div>
            <div class="col-lg-6">
                    <h3><i> Address Information</i></h3>
            
            
                <i><p class="lead"><strong>City:</strong><%= @employee.city %></p></i>
                <i><p class="lead"><strong>State:</strong><%= @employee.state %></p></i>
                <i><p class="lead"><strong>Country:</strong><%= @employee.country %></p></i>
                <i><p class="lead"><strong>Pincode:</strong><%= @employee.pincode %></p></i>
                <i><p class="lead"><strong>Address1:</strong><%= @employee.address1 %></p></i>
                <i><p class="lead"><strong>Address2:</strong><%= @employee.address2 %></p></i>
                <i><p class="lead"><strong>About:</strong><%= @employee.about %></p></i>
                <i><p class="lead"><strong>Job title:</strong><%= @employee.job_title %></p></i>
            </div>    
        </div>

        <% if @employee.documents.present? %>
            <div class="row mt-4">
                <i><h3 class="text-center">Employee Document</h3></i>
            <% @employee.documents.each do |document| %>
                <div class="card-body">
                    <div class="row">
                        <% if document.image.attached? %>
                            <div class="col-lg-4">
                                <%= image_tag document.image,class:'img-fluid'%>
                            </div>
                        <% end %>
                        <div class="col-lg-4">
                            <p class="lead"><%= document.name %></p>
                        </div>
                            <div class="col-lg-4">
                                <p class="lead"><%= document.doc_type %></p>
                            </div>
                    </div>
                </div>
            <% end %>
            </div>
        <% end %>
        <%= link_to 'Back to Employee',employees_path, class: 'btn btn-outline-primary btn-lg rounded-0'%>
        <%= link_to 'Edit Employee', edit_employee_path(@employee),class:'btn btn-primary btn-lg rounded-0' %>
</div>