
<div class="col-lg-12">
    <div class="card rounded-0 mt-2 mb-5">
        <div class="card-body">
            <h2 class="text-center"><i> Employee Listing</i></h2>
        </div>
    </div>
    <h3 class="text-center"><i><%= flash[:notice] %></i></h3>
    <%= link_to 'Create New Employee', new_employee_path, class: 'btn btn-primary mt-3 rounded-0' %>
        <div class="text-center">
            
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <i>  <th>#</th> </i> 
                        <i><th>Name:</th> </i> 
                        <i><th>Personal Email:</th> </i> 
                        <i><th>Address</th></i> 
                         <i><th>Actions</th></i> 
                          
                    </tr>
                </thead>
                <tbody>
                    <% @employees.each do |employee| %>
                        <tr>
                            <td></td>
                            <i><td><%= employee.name %></td></i>
                            <i><td><%= employee.personal_email %></td></i>
                            <i><td><%= employee.full_address %></td></i>
                            <td>
                                <div class="dropdown">
                                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Actions
                                      </button>
                                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><%= link_to 'Edit', edit_employee_path(employee),class:'dropdown-item' %></li>
                                        <li><%= link_to 'show', employee_path(employee),class: 'dropdown-item'%></li>
                                        <li><%= link_to 'Delete', employee_path(employee),class: 'dropdown-item',method: :delete, data: { confirm: 'Are  you sure  delete this employee?'}%></li>
                                      </ul>
                                 </div>
                            </td> 
                        </tr>

                        
                    <% end %>
                
                </tbody>
            
            </table>
            
    </div>
</div>